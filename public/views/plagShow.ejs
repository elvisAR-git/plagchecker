<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Plagchecker</title>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
  <!--Import materialize.css-->
  <link type="text/css" rel="stylesheet" href="css/materialize.css" media="screen,projection" />
  <link type="text/css" rel="stylesheet" href="css/mine.css" media="screen,projection" />

  <!--Let browser know website is optimized for mobile-->
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>
<style>
  .row {
    padding: 2rem;
  }
</style>

<!--JavaScript at end of body for optimized loading-->
<script type="text/javascript" src="js/materialize.js"></script>
<script src="/js/plag.js"></script>

<body>
  <nav>
    <div class="nav-wrapper blue">

      <a href="/" class="brand-logo center">Code Plagiarism checker</a>
      <ul id="nav-mobile" class="left hide-on-med-and-down">
        <!-- <li><a href="sass.html">Help</a></li> -->
      </ul>
    </div>
  </nav>
  <div class="container">
    <br />
    <a href="/" class="btn btn-large">Upload other files</a>
    <p>Select file to view report</p>
    <p class="grey-text"><span class="red-text">*</span>Please note, some files may still be in processing by the server
    </p>
    <div class="row card">
      <div class="col s4">
        <div class="collection" id="list">
          <% source_files.forEach(element => { %>
          <a href="#" id="<%=element.id%>" onclick="fetchReport(this)" class="collection-item"><i
              class="material-icons">description</i><span
              class="text-accent-1"><%=element.file.originalname%></span></a>

          <% }) %>
        </div>
      </div>
      <div class="col s8 center container">
        <div class="" id="none">
          <i class="material-icons">info</i>
          <p>No file selected</p>
        </div>

        <!-- report -->

        <div class="report hide" id="report">
          <h4 id="unique"></h4>
          <div class="progress">
            <div class="determinate" id="progressbar"></div>
          </div>

          <div class="row">
            <div class="col s12 m6">
              <div class="card-panel red">
                <span class="white-text" id="description">No similar files found</span>
              </div>
            </div>
            <div class="col s12 m6">
              <div class="card-panel blue">
                <span class="white-text" id="lines">all lines are unique</span>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col s12 m12">
              <div class="card-panel card">
                <p>Similar files</p>
                <ul class="collection with-header" id="similar-files">
                  <li class="collection-item">No files</li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- modal -->
  <div id="modal1" class="modal center">
    <div class="modal-content">
      <p>Processing, please wait...</p>
      <div class="preloader-wrapper active" id="loader">
        <div class="spinner-layer spinner-blue-only">
          <div class="circle-clipper left">
            <div class="circle"></div>
          </div>
          <div class="gap-patch">
            <div class="circle"></div>
          </div>
          <div class="circle-clipper right">
            <div class="circle"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>

</html>