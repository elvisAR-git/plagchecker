'use strict';

var mongoose = require('mongoose');
var Schema = mongoose.Schema;
var autopopulate = require('mongoose-autopopulate');

var schemaOptions = {
    toObject: { virtuals: true },
    toJSON: { virtuals: true },
    timestamps: {createdAt: 'create_date', updatedAt: 'last_updated'}
};

var sliderImagesSchema = new Schema({
    saas_id:{type: Schema.Types.ObjectId, ref: 'Saas', autopopulate:false},
    image:{type: String, required: false},
    display_order:{type: Number, default: null},
    is_deleted: { type: Boolean, default: false },
}, schemaOptions);

sliderImagesSchema.plugin(autopopulate);

sliderImagesSchema.pre('save', function (next) { this.last_updated = new Date(); if (!this.isNew) { return next(); } next(); });

module.exports = mongoose.model('sliderImages', sliderImagesSchema);	
