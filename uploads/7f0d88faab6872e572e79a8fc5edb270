'use strict';

var mongoose = require('mongoose');
var Schema = mongoose.Schema;
var crypto = require('crypto');
var autopopulate = require('mongoose-autopopulate');

var schemaOptions = {
    toObject: { virtuals: true },
    toJSON: { virtuals: true },
    timestamps: {createdAt: 'create_date', updatedAt: 'last_updated'}
};


var companyRattingReviewSchema = new Schema({
    saas_id:{type: Schema.Types.ObjectId, ref: 'Saas', autopopulate:false}, // SaaS ID is 0 if its belongs BISMART
    user_id:{type: Schema.Types.ObjectId, ref: 'User', autopopulate:true}, 
    company_id:{type: Schema.Types.ObjectId, ref: 'InsuranceCompany', autopopulate:true}, 
    rating: {type: String, required: true, default: null}, 
    review: {type: String, required: true, default: null},
	status: {type:Boolean, default: false},
    is_deleted: { type: Boolean, default: false },
}, schemaOptions);

companyRattingReviewSchema.plugin(autopopulate);

companyRattingReviewSchema.pre('save', function (next) { this.last_updated = new Date(); if (!this.isNew) { return next(); } next(); });

module.exports = mongoose.model('company_ratting_review', companyRattingReviewSchema);