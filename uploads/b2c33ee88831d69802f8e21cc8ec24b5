'use strict';

var mongoose = require('mongoose');
var Schema = mongoose.Schema;
var autopopulate = require('mongoose-autopopulate');

var schemaOptions = {
    toObject: { virtuals: true },
    toJSON: { virtuals: true },
    timestamps: {createdAt: 'create_date', updatedAt: 'last_updated'}
};

var category_attributeSchema = new Schema({
    category_id:{type: Schema.Types.ObjectId, ref: 'ProductCategory', autopopulate:false},
    attribute_id:{type: Schema.Types.ObjectId, ref: 'product_attribute', autopopulate:true},
    premium_calculation_id:{type: Schema.Types.ObjectId, ref: 'premium_calculation_template', autopopulate:true},
    is_deleted: { type: Boolean, default: false },
}, schemaOptions);

category_attributeSchema.plugin(autopopulate);

category_attributeSchema.pre('save', function (next) { this.last_updated = new Date(); if (!this.isNew) { return next(); } next(); });

module.exports = mongoose.model('category_attribute_premiumtemplate', category_attributeSchema);