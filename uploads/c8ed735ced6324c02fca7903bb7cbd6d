'use strict';

var mongoose = require('mongoose');
var Schema = mongoose.Schema;
var autopopulate = require('mongoose-autopopulate');

var schemaOptions = {
    toObject: { virtuals: true },
    toJSON: { virtuals: true },
    timestamps: {createdAt: 'create_date', updatedAt: 'last_updated'}
};

var AboutUsSchema = new Schema({
    saas_id:{type: Schema.Types.ObjectId, ref: 'Saas', autopopulate:false}, // SaaS ID is 0 if its belongs BISMART
    title:{type: String, required: false, default: null},
    description:{type:String, default: null},
    vision:{type:String, default: null},
    mission:{type:String, default: null},
    value:{type:String, default: null},
    visionMissionImage:{type:String, default: null},
    aboutUsBanner:{type: String, default: null},
    innovationLink:{type: String, default: null},
    features:[{
        icon: {type: String, default: null},
        title: {type: String, default: null},
        description: {type: String, default: null},
    }],
    is_deleted: { type: Boolean, default: false },
}, schemaOptions);

AboutUsSchema.plugin(autopopulate);

AboutUsSchema.pre('save', function (next) { this.last_updated = new Date(); if (!this.isNew) { return next(); } next(); });

module.exports = mongoose.model('AboutUs', AboutUsSchema);
