'use strict';

var mongoose = require('mongoose');
var Schema = mongoose.Schema;
var autopopulate = require('mongoose-autopopulate');

var schemaOptions = {
    toObject: { virtuals: true },
    toJSON: { virtuals: true },
    timestamps: {createdAt: 'create_date', updatedAt: 'last_updated'}
};

var product_attributeSchema = new Schema({
    attribute_name:{type: String, default: null },
    value_input_type:{type: String, default: null},
    default_value:{type: String, default: null},
    is_deleted: { type: Boolean, default: false },
}, schemaOptions);

product_attributeSchema.plugin(autopopulate);

product_attributeSchema.pre('save', function (next) { this.last_updated = new Date(); if (!this.isNew) { return next(); } next(); });

module.exports = mongoose.model('product_attribute', product_attributeSchema);