'use strict';

var mongoose = require('mongoose');
var Schema = mongoose.Schema;
var autopopulate = require('mongoose-autopopulate');

var schemaOptions = {
    toObject: { virtuals: true },
    toJSON: { virtuals: true },
    timestamps: {createdAt: 'create_date', updatedAt: 'last_updated'}
};

var AllowedProductCategorySchema = new Schema({
    saas_id:{type: Schema.Types.ObjectId, ref: 'Saas', autopopulate:true},
    category_id: [{type: Schema.Types.ObjectId, ref: 'ProductCategory', autopopulate:true}],
    status: {type: Boolean, default: false},
    is_deleted: {type: Boolean, default: false },
}, schemaOptions);

AllowedProductCategorySchema.plugin(autopopulate);

AllowedProductCategorySchema.pre('save', function (next) { this.last_updated = new Date(); if (!this.isNew) { return next(); } next(); });

module.exports = mongoose.model('AllowedProductCategory', AllowedProductCategorySchema);