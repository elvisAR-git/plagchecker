'use strict';

var mongoose = require('mongoose');
var Schema = mongoose.Schema;
var autopopulate = require('mongoose-autopopulate');

var schemaOptions = {
    toObject: { virtuals: true },
    toJSON: { virtuals: true },
    timestamps: {createdAt: 'create_date', updatedAt: 'last_updated'}
};

var category_customizeSchema = new Schema({
    saas_id: {type: Schema.Types.ObjectId, ref: 'Saas', autopopulate:true},
    category_id: {type: Schema.Types.ObjectId, ref: 'ProductCategory', autopopulate:true},
    category_discription: {type: String, default: '' },
    display_name: {type: String, default: '' },
    input_form_image: {type: String, default: '' },
    policy_document: {type: String, default: '' },
    providerList_document: {type: String, default: '' },
    is_deleted: {type: Boolean, default: false },
}, schemaOptions);

category_customizeSchema.plugin(autopopulate);

category_customizeSchema.pre('save', function (next) { this.last_updated = new Date(); if (!this.isNew) { return next(); } next(); });

module.exports = mongoose.model('category_customize', category_customizeSchema);
