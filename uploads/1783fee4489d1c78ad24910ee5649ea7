'use strict';

var mongoose = require('mongoose');
var Schema = mongoose.Schema;
var autopopulate = require('mongoose-autopopulate');

var schemaOptions = {
    toObject: { virtuals: true },
    toJSON: { virtuals: true },
    timestamps: {createdAt: 'create_date', updatedAt: 'last_updated'}
};

var saas_product_pakage_attributeSchema = new Schema({
    package_id:{type: Schema.Types.ObjectId, ref: 'saas_product_package', autopopulate:false},
    attribute_id:{type: Schema.Types.ObjectId, ref: 'product_attribute', autopopulate:false},
    attrib_name:{type: String, default: null},
    attrib_value:{type: String, default: null},
    description_details:{type: String, default: null},
    attrib_cost:{type: String, default: null},
    isManadatory: { type: Boolean, default: false },
    is_deleted: { type: Boolean, default: false },
}, schemaOptions);

saas_product_pakage_attributeSchema.plugin(autopopulate);

saas_product_pakage_attributeSchema.pre('save', function (next) { this.last_updated = new Date(); if (!this.isNew) { return next(); } next(); });

module.exports = mongoose.model('saas_product_pakage_attribute', saas_product_pakage_attributeSchema);	