'use strict';

var mongoose = require('mongoose');
var Schema = mongoose.Schema;
var autopopulate = require('mongoose-autopopulate');

var schemaOptions = {
    toObject: { virtuals: true },
    toJSON: { virtuals: true },
    timestamps: {createdAt: 'create_date', updatedAt: 'last_updated'}
};

var saas_mpesa_configurationSchema = new Schema({
    saas_id: {type: Schema.Types.ObjectId, ref: 'Saas', autopopulate:true},
    agent_id: {type: Schema.Types.ObjectId, ref: 'AgentInformation', autopopulate:true},
    initiator_name: {type: String, default: '' },
    password: {type: String, default: '' },
    shortcode: {type: String, default: '' },
    lipana_shorotcode: {type: String, default: '' },
    lipana_passkey: {type: String, default: '' },
    //transactionType: {type: String, default: null }, //B2C, C2B, B2B
    C2B : {
        consumer_key: {type: String, default: '' }, //username
        consumer_secret: {type: String, default: '' }, //password
    },
    B2C : {
        consumer_key: {type: String, default: '' }, //username
        consumer_secret: {type: String, default: '' }, //password
    },
    B2B : {
        consumer_key: {type: String, default: '' }, //username
        consumer_secret: {type: String, default: '' }, //password
    },
    is_deleted: {type: Boolean, default: false },
}, schemaOptions);

saas_mpesa_configurationSchema.plugin(autopopulate);

saas_mpesa_configurationSchema.pre('save', function (next) { this.last_updated = new Date(); if (!this.isNew) { return next(); } next(); });

module.exports = mongoose.model('saas_mpesa_configuration', saas_mpesa_configurationSchema);