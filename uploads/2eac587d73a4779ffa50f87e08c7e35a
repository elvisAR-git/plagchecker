'use strict';

var mongoose = require('mongoose');
var Schema = mongoose.Schema;
var autopopulate = require('mongoose-autopopulate');

var schemaOptions = {
    toObject: { virtuals: true },
    toJSON: { virtuals: true },
    timestamps: {createdAt: 'create_date', updatedAt: 'last_updated'}
};

var ContactUsSchema = new Schema({
    saas_id:{type: Schema.Types.ObjectId, ref: 'Saas', autopopulate:false}, // SaaS ID is 0 if its belongs BISMART
    address:{type: String, default: ""},
    phone_primary:{type: String, default: ""},
    phone_secondary:{type: String, default: ""},
    fax_no:{type: String, default: ""},
    email_primary:{type: String, default: ""},
    email_secondary:{type: String, default: ""},
    google_map_iframe:{type: String, default: ""},
    contact_page_content:{type: String, default: ""},
    contact_page_title:{type: String, default: ""},
    timing :  {
        timeFrom: {type: String, default: null},
        timeTo: {type: String, default: null},
        dayTo:{type: String, default: null},
        dayFrom: {type: String, default: null},
    },
    is_deleted: { type: Boolean, default: false },
}, schemaOptions);

ContactUsSchema.plugin(autopopulate);

ContactUsSchema.pre('save', function (next) { this.last_updated = new Date(); if (!this.isNew) { return next(); } next(); });

module.exports = mongoose.model('saas_contact_information', ContactUsSchema);	
